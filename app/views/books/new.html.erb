<h1>Nuevo libro</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>Se produjeron los siguientes errores al intentar guardar el libro:</h2>

      <ul>
      <% @book.errors.each do |attr, message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Título" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author, "Autor" %>
    <%= form.text_field :author %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar" %>
  </div>
<% end %>

<%= link_to 'Atrás', books_path %>
